    <script src='js/navbar.js'></script>
    <script src='js/cookies.js'></script>
	<script>
		var username = getCookie('username', document.cookie);
		if(username === '') {
			// Not logged in
			window.location.href = '/';
		}
	</script>

    <script>
        var activities;

        // Ajax to retrieve activites
        $(document).ready(() => {
            console.log("Done");
            $.ajax({
                type: "GET",
                url: '/userGetActivities',
                data: ({ username : username }),
                dataType: "json",
                success: function(data) {
                    console.log("Returned data:", data);
                    if(data['success']) {
                        activities = data['activities'];
                        updateActivities();
                    } else {
                        alert("Fail to login due to: " + data['reason']);
                    }
                },
                error: function(e) {
                    alert("Ajax error");
                }
            });
        });

        // Update activities by 10 more
        function updateActivities() {
            // No activities
            if(activities.length === 0) {
                $('#no-activities').css('visibility', 'visible');
                return;
            }

            // Generate activities
            var htmlString = '';
            for(var i = 0; i < activities.length; i++) {
                htmlString += getDateTitle(activities[i].date);
                for(var j = 0; j < activities[i].activities.length; j++) {
                    var activity = activities[i].activities[j];
                    console.log(activity);
                    htmlString += getActivityDiv(activity["name"], activity['type'], activity['start'], activity['end'], activity['duration'] / 3600);
                }
            }
            $('#activities-list').html(htmlString);
        }

        function getActivityDiv(title, type, startTime, endTime, duration) {
            var str = 
                "<div class='activities-div'>" + 
                    "<h2 class='activities-title'>" + title + "</h2>" +
                    "<span class='activities-type'>" + type + "</span>" +
                    "<p class='activities-time'>" + startTime + " - " + endTime + "</p>" +
                    "<p class='activities-duration'>" + duration + "h</p>" +
                "</div>";
            console.log(str);
            return str;
        }

        function getDateTitle(date) {
            return "<h2 class='activities-date'>" + date + "</h2>";
        }
    </script>
</html>